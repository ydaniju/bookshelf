<nav>
  <h1><%= link_to 'Bookshelf', routes.root_path %></h1>
  <section class="tools">
    <% if current_user.nil? %>
      <a href="<%= routes.new_authentication_path %>">
        <button class="tool button button-default">Login</button> 
      </a>

      <a href="<%= routes.new_registration_path %>">
        <button class="tool button button-default left-24">Signup</button> 
      </a>
    <% else %>
      <a href="<%= routes.new_book_path %>">
        <button class="tool button button-default">Add Book</button> 
      </a>

      <div class="dropdown">
        <button
          class="tool button button-default button-round button-drop left-24"
          id="buttonDrop"
        >
          AV
        </button> 
        <div id="myDropdown" class="dropdown-content">
          <%= link_to 'My bookshelf', routes.books_path, class: "dropdown-item" %>
          <a class="dropdown-item" href="#">Edit Profile</a>
          <%= 
            form_for :authentication,
                      routes.authentication_path,
                      method: :delete do
              submit 'Logout', class: 'dropdown-item'
            end
          %>
        </div>
      </div>
    <% end %>
  </section>
</nav>
