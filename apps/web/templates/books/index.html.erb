<h2>All books</h2>

<% if books.any? %>
  <table id="books" style="width:80%; margin: 0 auto; text-align:left">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>#</th>
    </tr>
    <% books.each do |book| %>
      <tr class="book">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="placeholder">There are no books yet.</p>
<% end %>

<%= link_to 'Add Book', routes.new_book_path %>
